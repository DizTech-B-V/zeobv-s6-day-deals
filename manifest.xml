<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/Framework/App/Manifest/Schema/manifest-1.0.xsd">
    <meta>
        <name>ZeobvDayDeals</name>

        <label>Day Deals</label>
        <label lang="de-DE">Tagesangebot</label>
        <label lang="nl-NL">Dag Deals</label>

        <description>This app allows you to configure day deals for your customers.</description>
        <description lang="de-DE">Mit dieser App können Sie Tagesangebote für Ihre Kunden konfigurieren.</description>
        <description lang="nl-NL">Breng uw klanten terug naar uw winkel door herinneringen voor verlaten winkelwagentjes te sturen.</description>

        <author>ZEO BV.</author>
        <copyright>(c) by DizTech BV.</copyright>
        <version>1.0.0</version>

        <icon>Resources/config/plugin.png</icon>

        <license>proprietary</license>
    </meta>

    <custom-fields>
        <custom-field-set>
            <name>zeobv_day_deals_configuration</name>

            <label>Day deal configuration</label>
            <label lang="de-DE">Konfiguration des Tagesgeschäfts</label>
            <label lang="nl-NL">Dagdeal configuratie</label>

            <related-entities>
                <product/>
            </related-entities>

            <fields>
                <datetime name="zeobv_day_deal_date">
                    <label>Day deal date</label>
                    <label lang="de-DE">Datum des Tagesgeschäfts</label>
                    <label lang="nl-NL">Dag deal datum</label>

                    <position>1</position>

                    <required>false</required>
                </datetime>
            </fields>
        </custom-field-set>
    </custom-fields>
</manifest>
